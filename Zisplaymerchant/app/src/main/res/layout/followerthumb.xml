<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@color/pure_white"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:layout_height="wrap_content">

        <ImageView android:id="@+id/_followerImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/test"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            />


           <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:id="@+id/follwersBlock"
               android:layout_toRightOf="@+id/_followerImage"
               android:layout_marginLeft="16dp"
               android:orientation="vertical"
               android:layout_marginRight="16dp"


               >

               <TextView android:id="@+id/_followerName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Follower Name"
                   android:textSize="13dp"
                   android:textStyle="bold"
                   android:layout_centerVertical="true"
                   android:layout_marginTop="22dp"
                   android:textColor="@color/catalogProductTextColor"
                   />

               <TextView android:id="@+id/_followerNameLikes"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Gurgaon, HR"
                   android:textSize="12dp"
                   android:layout_centerVertical="true"
                   android:textColor="#949eae"
                   android:layout_below="@+id/_followerName"
                   android:layout_marginBottom="22dp"
                   />

               <View
                   android:layout_width="fill_parent"
                   android:layout_height="1dp"
                   android:id="@+id/separator"
                   android:visibility="visible"
                   android:background="#e7eaf0"
                   android:layout_below="@+id/follwersBlock"
                   android:layout_marginTop="10dp"
                   />

               </LinearLayout>





</RelativeLayout>