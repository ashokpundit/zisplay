<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/pure_white"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/test"
            android:id="@+id/contactImage"

            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"



            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/contactImage"
            android:id="@+id/messageBlock"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amruta Ghodke"
                android:textSize="18dp"
                android:textColor="@color/green_button"
                android:textStyle="bold"

                android:paddingTop="16dp"
                android:id="@+id/contactName"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:30pm"
                android:textSize="14dp"
                android:textColor="#cdcdcd"
                android:layout_alignParentRight="true"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:id="@+id/messageTime"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contactName"
                android:id="@+id/chatTextView"
                android:text="Interested in purchase Red gemotry canvas bag. is it available for home delivery? "
                android:textSize="16dp"
                android:textColor="#afafaf"
                android:paddingBottom="16dp"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chatImageView"
                android:visibility="gone"

                />


        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.6dp"
            android:id="@+id/separator"
            android:visibility="visible"
            android:layout_below="@+id/messageBlock"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray"/>


    </RelativeLayout>




</RelativeLayout>