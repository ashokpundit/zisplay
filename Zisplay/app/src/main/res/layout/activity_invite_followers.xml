<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="vun.zisplay.activity.InviteFollowers">

    <TextView android:text="Invite Friends and increase your reach."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoText"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoText"
        android:id="@+id/whatsapp"
        android:text="WhatsApp"
        android:onClick="inviteWhatsApp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whatsapp"
        android:id="@+id/sms"
        android:text="SMS"
        android:onClick="inviteSMS"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sms"
        android:id="@+id/facebook"
        android:text="Facebook"
        android:onClick="inviteFacebook"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebook"
        android:id="@+id/gmail"
        android:text="GMail"
        android:onClick="inviteGMail"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gmail"
        android:id="@+id/dashboard"
        android:text="Dashboard"
        android:onClick="dashboard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />
</RelativeLayout>
